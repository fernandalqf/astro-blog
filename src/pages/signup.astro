---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="mx-auto mt-20 max-w-md rounded-lg border p-6 shadow">
    <h1 class="mb-6 text-center text-2xl font-bold">Criar conta</h1>

    <form class="flex flex-col gap-4">
      <input
        type="email"
        placeholder="Email"
        class="w-full rounded border px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
      />

      <input
        type="password"
        placeholder="Senha"
        class="w-full rounded border px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
      />

      <button
        type="submit"
        class="rounded bg-blue-600 py-2 font-semibold text-white hover:bg-blue-700"
      >
        Criar conta
      </button>

      <p class="mt-4 text-center text-sm text-gray-600">
  JÃ¡ tem conta?
  <a
    href="/login"
    class="font-medium text-blue-600 hover:underline"
  >
    Fazer login
  </a>
</p>

    </form>
  </div>
</Layout>
